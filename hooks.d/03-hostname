#!/usr/bin/env bash
# 01-configure-apt
#
# Configuracion de HostName
#
echo -e "\033[32;40;7m Cambiar HostName \033[0m"
sleep 2
if [ -z "$HOST" ]; then
    $HOST = 'ubuntuBastion'
fi
hostnamectl set-hostname $HOST
sed -i -e '/ *#/d; /^ *$/d' /etc/hosts
echo " " >> /etc/hosts
echo "# Host IP Address" >> /etc/hosts
echo "127.0.0.1 $HOST" >> /etc/hosts
